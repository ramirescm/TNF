    "Oracle": "User ID=DBO; Password=dbo; Direct=true; Data Source=127.0.0.1/DBO; Service Name=XE; Port=1521;",
    "PostgresSQL": "Host=localhost;Database=Comanda;Username=postgres;Password=cmsol;Port=8070"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Error"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Hello World"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "ColoredConsole",
              "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u4}] {SourceContext} {Message}{NewLine}{Exception}"
            },
